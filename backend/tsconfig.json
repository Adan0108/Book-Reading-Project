{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",
    "isolatedModules": false,
  },
  "include": ["src"]
}
