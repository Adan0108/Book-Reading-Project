{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "allowJs": true,

    // "module": "commonjs",
    "module": "node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // "ignoreDeprecations": "6.0", //to silence the error from the deprecated moduleResolution

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",
    "isolatedModules": false,
  },
  "include": ["src"]
}
